# WhatsApp Business Service Environment Variables
# Copy this file to .env and fill in your actual values

# Required Variables
# ===================

# WhatsApp Business API Token (get from Meta Developer Console)
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here

# WhatsApp Phone Number ID (get from Meta Developer Console)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Webhook verification token (set this value and use the same in Meta webhook configuration)
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# HaiIndexer API URL
HAIINDEXER_API_URL=https://your-haiindexer-api-url.com

# HaiIndexer API Token (optional - permanent Bearer token for production)
# If not set, will attempt to fetch test token from /api/ui/auth/test-token (dev only)
HAIINDEXER_API_TOKEN=your_haiindexer_bearer_token_here

# Recommended Variables
# ======================

# WhatsApp App Secret (required for webhook signature validation)
WHATSAPP_APP_SECRET=your_whatsapp_app_secret_here

# Optional Configuration
# ======================

# Server port (default: 3000)
# PORT=3000

# Redis URL (optional, for rate limiting with Redis)
# REDIS_URL=redis://localhost:6379

# HaiIndexer API Configuration (optional, defaults shown)
# HAIINDEXER_API_TIMEOUT_MS=30000
# HAIINDEXER_API_MAX_RETRIES=3
# HAIINDEXER_API_RETRY_DELAY_MS=1000
# HAIINDEXER_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
# HAIINDEXER_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
# HAIINDEXER_CIRCUIT_BREAKER_TIMEOUT_MS=60000
# HAIINDEXER_CIRCUIT_BREAKER_RESET_TIMEOUT_MS=30000

# WhatsApp API Configuration (optional, defaults shown)
# ENABLE_MESSAGE_SPLITTING=true
# WHATSAPP_API_TIMEOUT_MS=15000
# WHATSAPP_API_MAX_RETRIES=2
# WHATSAPP_API_RETRY_DELAY_MS=1000
